{
  "name": "mongodb-schema-generator",
  "type": "mongodb-schema",
  "description": "Generates MongoDB schema files with Mongoose models",
  "templates": [
    {
      "name": "mongoose-schema",
      "path": "infrastructure/mongodb/schema.ts.ejs",
      "type": "file",
      "outputPath": "src/infrastructure/database/{databaseName}/mongodb/schemas/{schemaNames.kebabCase}.schema.ts"
    },
    {
      "name": "mongoose-model",
      "path": "infrastructure/mongodb/model.ts.ejs",
      "type": "file",
      "outputPath": "src/infrastructure/database/{databaseName}/mongodb/models/{schemaNames.kebabCase}.model.ts"
    },
    {
      "name": "mongodb-repository",
      "path": "infrastructure/mongodb/repository.ts.ejs",
      "type": "file",
      "outputPath": "src/infrastructure/database/{databaseName}/mongodb/repositories/{schemaNames.kebabCase}.repository.ts",
      "conditions": [
        {
          "field": "generateRepository",
          "operator": "equals",
          "value": true
        }
      ]
    },
    {
      "name": "mongodb-connection",
      "path": "infrastructure/mongodb/connection.ts.ejs",
      "type": "file",
      "outputPath": "src/infrastructure/database/{databaseName}/mongodb/connection.ts",
      "conditions": [
        {
          "field": "generateConnection",
          "operator": "equals",
          "value": true
        }
      ]
    }
  ],
  "dependencies": [
    "mongoose",
    "@types/mongoose"
  ]
}
